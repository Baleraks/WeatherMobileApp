<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherApp"
    xmlns:view="clr-namespace:WeatherApp.View">

    <TabBar Shell.TabBarBackgroundColor="CadetBlue" Shell.TabBarTitleColor="LightBlue">
        <ShellContent
           
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="icons8_home.png"/>
        <ShellContent
            Title="Map"
            ContentTemplate="{DataTemplate view:MapPage}"
            Icon="icons8_map.png"/>
        <ShellContent
            Title="Week"
            ContentTemplate="{DataTemplate view:WeekPage}"
            Icon="icons8_calendar.png"/>



    </TabBar>

</Shell>
